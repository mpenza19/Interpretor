#!/usr/bin/perl

while (<>) {
  print STDERR "\r$N" if ++$N % 1000 == 0;
  if (s/(<[^<>]+>)//) {
    $pos{$1} = 1;
  }
  while (s/(<[^<>]+>)//) {
    $tag{$1} = 1;
  }
}
print STDERR "\n";

$t1 = join('',sort keys %pos);
$t2 = join('',sort keys %tag);

open(MORPH, ">emor.fst") or die "Error: unable to open emor.fst!\n";
print MORPH "ALPHABET = [\\!-ÿ] [$t1 $t2]:<>\n\n\$ANY\$ = .*\n\n";
print MORPH "\"lexicon\" || \$ANY\$\n";
close MORPH;

open(FLEX, ">flekt.fst") or die "Error: unable to open flekt.fst!\n";
print FLEX "ALPHABET = [\\!-ÿ] [$t1] <>:[$t2]\n\n";
print FLEX ".* || \"lexicon\"\n";
close FLEX;
